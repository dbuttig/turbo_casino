<%= turbo_stream.replace "casino-content" do %>
  <%= turbo_frame_tag "casino-content" do %>
    <div class="text-center space-y-4">
    <h1 class="text-3xl font-bold">Slot Machine</h1>

    <div class="text-5xl font-mono">
      <%= @slots.join(" ") %>
    </div>

    <p class="text-yellow-400 font-semibold"><%= @message %></p>

    <%= form_with url: spin_slots_path, method: :post, data: { turbo_frame: "casino-content" } do %>
      <% out_of_credits = @funds.to_i <= 0 %>

      <button
        type="submit"
        class="px-4 py-2 font-bold rounded text-white
              <%= out_of_credits ? 'bg-gray-500 cursor-not-allowed' : 'bg-green-500 hover:bg-green-700' %>"
        <%= 'disabled' if out_of_credits %>>
        Spin!
      </button>
    <% end %>
  </div>
  <% end %>
<% end %>

<%= turbo_stream.replace "funds-amount" do %>
  <%= turbo_frame_tag "funds-amount" do %>
    <%= @funds %>
  <% end %>
<% end %>
